#!/bin/false

quirks_sway() {
	IMPORT_BACK_VARS="${IMPORT_BACK_VARS} I3SOCK SWAYSOCK"
	ALWAYS_CLEANUP_VARS="${IMPORT_BACK_VARS} I3SOCK SWAYSOCK"
	# detect disabled xwayland
	if grep -qE '^[[:space:]]*xwayland[[:space:]]+disable' "${XDG_CONFIG_HOME}/sway/config"
	then
		XWAYLAND=false
	else
		XWAYLAND=true
	fi
}

